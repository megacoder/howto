#!/bin/zsh
# vim: ts=8 sw=8
configure -m e16							\
									\
	--with-x							\
	--with-gnu-ld							\
	--enable-pseudotrans						\
	--disable-nls							\
	--enable-composite						\
	--enable-modules						\
	--enable-modules						\
	--enable-pango							\
	--enable-silent-rules						\
	--enable-sound							\
	--enable-sound-esound						\
	--enable-sound-pulse						\
									\
	"$@"
make dist
