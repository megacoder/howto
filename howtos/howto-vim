#!/bin/zsh

if [[ -x /bin/pump ]]; then
	TRAPEXIT()	{
		if [[ -x /bin/pump ]]; then
			pump --shutdown
		fi
	}
	eval $(pump --startup)
fi

make -j12

exit 0

#
cd src
rm -rf configure auto/configure
configure -m vim							\
	--with-features=huge						\
	--enable-pythoninterp=yes					\
	--enable-tclinterp						\
	--enable-rubyinterp=yes						\
	--enable-luainterp=yes						\
	--enable-sniff							\
	--enable-fontset						\
	--disable-netbeans						\
	--enable-gui=auto						\
	--enable-cscope							\
	CFLAGS='-pipe -g -Os -D_FORTIFY_SOURCE=1'			\
	"$@"
exit
	--disable-nextaw-check						\
	--enable-athena-check						\
	--enable-gnome-check						\
	--enable-gtk2-check						\
	--enable-gui=athena						\
	--enable-gui=gnome						\
	--enable-gui=gtk2						\
	--enable-gui=nextaw						\
	--enable-motif-check						\
	--enable-neXtaw-check						\
	--enable-perlinterp=dynamic					\
