#!/bin/zsh
[ -d src ] && cd src
[ -d autom4cache ] && rm -rf autom4cache
[ -d auto ] && rm -rf auto/config.cache
mkdir -p auto
rm -f configure
configure vim								\
	--with-features=huge						\
	--enable-pythoninterp=yes					\
	--enable-tclinterp						\
	--enable-rubyinterp=yes						\
	--enable-luainterp=yes						\
	--enable-cscope							\
	--enable-sniff							\
	--enable-fontset						\
	--enable-gui							\
	--enable-gtk2-check						\
	--enable-neXtaw-check						\
	--enable-athena-check						\
	--enable-motif-check						\
	--enable-gnome-check						\
	--disable-netbeans						\
	CFLAGS='-pipe -g -O9 -D_FORTIFY_SOURCE=1'			\
	"$@"
make -j20
exit
	--disable-nextaw-check						\
	--enable-perlinterp=dynamic					\
	--enable-gui=nextaw						\
	--enable-gui=gtk2						\
	--enable-gui=athena						\
	--enable-gui=auto						\
